          "system": {
            "type": "string",
            "nullable": true
          },
          "systemId": {
            "type": "string",
            "nullable": true
          },
          "callbacks": {
            "$ref": "#/components/schemas/CallbacksRecord"
          },
          "agent": {
            "$ref": "#/components/schemas/Agent"
          },
          "visitor": {
            "$ref": "#/components/schemas/Visitor"
          },
          "account": {
            "$ref": "#/components/schemas/Account"
          }
