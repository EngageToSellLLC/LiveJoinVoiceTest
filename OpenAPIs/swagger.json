          "CallerEnter",
          "CallerHangup",
          "CallerUnmute",
          "CallerMute",
          "RecordingAvailable"
        ],
        "type": "string"
      },
      "CallbacksRecord": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "nullable": true
          },
          "types": {
            "type": "array",
